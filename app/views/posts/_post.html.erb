<%= link_to user_post_path(@user.id, post.id) do%>
  <div class="post-header">
      
      <div class="post-inner">
        <h2><%= post.title %></h2>

        <p><%= post.text %></p>
      </div>
      

      <div class="post-counters">
        <h3>Comments: <%= post.comments_counter %></h3>
        <h3>Likes: <%= post.likes_counter %></h3>
      </div>

  </div>
<%end%>